
{{# if products }}
<div class="row">
    <div class="col-md-3"></div>
      <div class="col-md-6 mt-5">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-primary badge-pill">{{session.cart.totalQty}}</span>
          </h4>
          <ul class="list-group mb-3">
                {{# each products}}
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">{{ this.item.title}}</h6>
                <small class="text-muted ml-3">Item Quantity:{{ this.qty }}</small>
                <small class="text-muted ml-3">Item Price:{{ this.item.price }}</small>
              </div>
              <span class="text-muted">{{ this.price }}</span>
            </li>
             {{/each}}
            
            <li class="list-group-item d-flex justify-content-between">
              <span class="text-success">Total (USD)</span>
              <strong>{{ this.totalPrice }}</strong>
            </li>
          </ul>

