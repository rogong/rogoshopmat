            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
{{# each products }}
                    <div class="row">
                         {{# each this}}
                        <div class="col-md-3 col-sm-6">

                            <div class="card testcard" style="height: 30rem;">
                                <img class="card-img-top" src="{{ this.imagePath }}" alt="Card image cap" >
                                <div class="card-body" style="height: 200px;">

                                    <h5 class="card-title font-dark-blue">{{ this.title }}</h5>
                                    <p class="card-text">
                                         {{ this.description }}</p>

                                     <strong class="mt-3 badge badge-success badge-pill text-light">Price: ${{ this.price }}</strong>


                                     <a href="/detail/{{this._id}}" class="mt-5 float-left">
                                        <i class="fa fa-eye" aria-hidden="true"></i>View Detail</a>

                                    <a href="/add-to-cart/{{this._id}}" class="btn btn-sm btn-primary mt-3 float-right">
                                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>Add to cart</a>

                                </div>
                            </div>
                        </div>
                        {{/each}} 

                    </div>

{{/each}}




                </div>
            </div>
